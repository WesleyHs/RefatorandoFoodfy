{% extends "layout.njk" %}

{% block head%}

    <title>{{item.title}}</title>

{% endblock %}
{% block content %}

    <section class="recipe-wrapper">

        <div class="detalhe-image">
            <img src="{{recipe.image}}" alt="">

            <h1>{{recipe.title}}</h1>
            <p>{{recipe.author}}</p>
        </div>
        <div class="detalhe-preparo">
            <h2>Ingredientes</h2>
            <a class="button">Esconder</a>

            <div class="detalhe-ingrediente">
                <ul class="content show">
                    {# colocando a listagem do ingrediente e dividindo cada item por virgula do array #}
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>

            </div>

        </div>

        <div class="detalhe-preparo">
            <h2>Modo de preparo</h2>
            <a class="button">Esconder</a>

            <ul class="content show">
                {# colocando a listagem de preparação e dividindo cada item por virgula do array #}
                {% for preparation in recipe.preparation %}
                    <li>{{preparation}}</li>
                {% endfor %}
            </ul>

            <div class="detalhe-preparo">
                <h2>Dicas</h2>
                <a class="button">Esconder</a>
                <div class="content show">
                    <p>{{recipe.information}}</p>
                </div>
            </div>

        </section>

        <script src="/scripts.js"></script>

    {% endblock %}